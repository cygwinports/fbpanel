DESCRIPTION="GTK+ lightweight desktop panel"
HOMEPAGE="http://fbpanel.sourceforge.net/"
SRC_URI="mirror://sourceforge/fbpanel/${P}.tgz"

src_compile() {
	lndirs
	cd ${B}
	./configure --prefix=/usr --devel --cpu=off || error "configure failed"
	cygmake -j1 DEVEL=1 STATIC_PLUGINS=1
}

src_install() {
	cd ${B}
	cyginstall PREFIX=${D}/usr STATIC_PLUGINS=1
}
