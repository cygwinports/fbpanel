DESCRIPTION="GTK+ lightweight desktop panel"
HOMEPAGE="http://fbpanel.sourceforge.net/"
SRC_URI="mirror://sourceforge/fbpanel/${P}.tbz2"
PATCH_URI="5.6-cpu-plugin.patch
           5.6-dynamic-plugins.patch"

src_compile() {
	lndirs
	cd ${B}
	./configure --prefix=/usr || error "configure failed"
	cygmake -j1
}

src_install() {
	cd ${B}
	cyginstall PREFIX=${D}/usr
	# .exe handling
	strip ${D}/usr/bin/fbpanel
}
